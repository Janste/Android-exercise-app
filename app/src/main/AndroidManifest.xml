<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jansteczko.hiitbodyweightexercise">

    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/main_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity
            android:name=".view.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".view.BeginWorkoutActivity"
            android:parentActivityName=".view.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name=".view.ChooseWorkoutActivity"
            android:parentActivityName=".view.BeginWorkoutActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name=".view.ChooseDifficultyActivity"
            android:parentActivityName=".view.BeginWorkoutActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name=".view.WorkoutDetailsActivity"
            android:parentActivityName=".view.ChooseWorkoutActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name=".view.ExerciseDetailsActivity"
            android:parentActivityName=".view.WorkoutDetailsActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name=".view.AboutActivity"
            android:parentActivityName=".view.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name=".view.PrepareForWorkoutActivity"
            android:parentActivityName=".view.BeginWorkoutActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name=".view.DoWorkoutActivity"
            android:parentActivityName=".view.PrepareForWorkoutActivity" >
        </activity>
    </application>

</manifest>